<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wemax" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="selected_text" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="non_selected_text" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.Wemax.NoActionBarAndStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>