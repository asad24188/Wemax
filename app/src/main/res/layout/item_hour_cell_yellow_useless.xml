<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top|center_horizontal"
        android:text="10:00"
        android:textColor="@color/grey"
        android:textSize="@dimen/_9ssp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vertical_Line1"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_7sdp"
            android:background="@color/yellow_dark" />

        <View
            android:id="@+id/vertical_line2"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/horizontal_Line1"
            android:background="@color/yellow_dark" />

        <View
            android:id="@+id/horizontal_Line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_7sdp"
            android:layout_toRightOf="@+id/vertical_Line1"
            android:background="@color/yellow_light" />


        <!--        <View
                    android:id="@+id/horizontal_line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/horizontal_Line1"
                    android:layout_toRightOf="@+id/vertical_line2"
                    android:background="@color/et_borde_color" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/horizontal_Line1"
            android:layout_toRightOf="@+id/vertical_Line1"
            android:background="@color/yellow_light"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_8sdp">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/new_year_party_event"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/time_"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>