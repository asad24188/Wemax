<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            android:text="Choose Date &amp; Time"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:text="Choose Specific Times Where You \nWants To Switch To"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_24sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <RadioGroup
        android:id="@+id/radio_groupTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



    <RadioButton
        android:id="@+id/hours8"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_17sdp"
        android:checked="true"
        android:fontFamily="@font/poppins_light"
        android:paddingLeft="@dimen/_10sdp"
        android:text="Custome Time"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />
    </RadioGroup>
</LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:text="Start from"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg_custom_date"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgFlaotAdd"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/ic_calanader"
        android:layout_marginStart="@dimen/_10sdp"
        app:tint="@color/blue"/>

    <TextView
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:text="Select Date"
        android:inputType="textEmailAddress"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/_11ssp" />

</LinearLayout>
   <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:text="End to"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg_custom_date"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/ic_calanader"
        android:layout_marginStart="@dimen/_10sdp"
        app:tint="@color/blue"/>

    <TextView
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:text="Select Date"
        android:inputType="textEmailAddress"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/_11ssp" />

</LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginHorizontal="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>