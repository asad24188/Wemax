<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.event.AddYourOwnActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/backpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/back_arrow" />

            </LinearLayout>


            <TextView
                android:id="@+id/topView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Add Your Own"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/background_search2"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingStart="@dimen/_15sdp"
            android:text="Pizza"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/background_search2"
            android:paddingEnd="@dimen/_5sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/line_searchbox1"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="Quantity"
                android:paddingStart="@dimen/_15sdp"
                android:text="1"
                android:textColor="@color/black"
                android:textColorHint="@color/see_all_text"
                android:textSize="@dimen/_11sdp" />

            <View
                android:id="@+id/line_searchbox1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/btnSearchLayout1"
                android:background="@color/searchbox_grey_home"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/btnSearchLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp">

                <TextView
                    android:id="@+id/btnSearch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="Unit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/errow_down1"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/btnSearch1"
                    android:src="@drawable/ic_below"
                    android:visibility="visible"
                    app:tint="@color/searchbox_grey_home_amd" />


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Who Is Bringing"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/btnSearchLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/background_search2"
            android:paddingHorizontal="@dimen/_5sdp">

            <EditText
                android:id="@+id/gotoSearcActvity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/line_searchbox"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textColorHint="@color/see_all_text"
                android:textSize="@dimen/_11sdp" />

            <View
                android:id="@+id/line_searchbox"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/btnSearchLayout"
                android:background="@color/searchbox_grey_home"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/btnSearchLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:src="@drawable/ic_search" />

                <ImageView
                    android:id="@+id/errow_down"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/btnSearch"
                    android:src="@drawable/ic_below"
                    android:visibility="gone"
                    app:tint="@color/searchbox_grey_home_amd" />


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="OR"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Allow The Users To Pick From Themselves."
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_28sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="@dimen/_200sdp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>